<% title 'Rankings' %>

<div id="content">
<div class="wrap">

	<% if @current_challenge.present? %>

	<h4 class="banner"><%= @current_challenge.name %> Rankings</h4>

	<ul id="ranking-list">
		<% @stat_list.each do |s| %>
			<li<% if s.user_id == current_user.id %> class="current_user"<% end %>>#<%= s.rank %> <%= s.user.first_name %> <%= s.user.last_name %> â€“ <%= s.total_points %>
			</li>
		<% end %>
	</ul>

	<% else %>

	<div class="text-center">
		<h2>It Looks Like We Haven't Added  You to the Challenge Yet</h2>
		<p>When we get close to the beginning of the Challenge, we will add the users who have purchased the challenge. Stay tuned, and let us know if you have any questions.</p>
		<h4>Need to Purchase a Challenge?</h4>
		<p>If you have not yet purchased a challenge, you can do so here:</p>
		<a class="btn" href="http://bestdayever.com">Purchase Challenge</a>
	</div>

	<% end %>

</div>
</div>